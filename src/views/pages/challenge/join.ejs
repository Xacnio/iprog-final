<a href="<%= challenge.href %>"><button class="form-button"><%= locale.MAIN.BACK %></button></a>

<% if (typeof success === 'string') { %>
    <div class="al al-success" style="margin-top: 20px;">
        <%= success %>
    </div>
    <div class="gallery" style="margin-top:30px;">
        <% if(typeof imgHref === "string") { %>
            <div class="gallery-block col-3">
                <div class="gallery-image gradient">
                    <img class="lazy" data-src="<%= imgHref %>" alt="" src="/images/pix.gif" />
                </div>
            </div>
        <% } %>
        <div class="clear"></div>
    </div>
<% }
else if(typeof error === 'string') { %>
<div class="al al-danger" style="margin-top: 20px;">
    <%= error %>
</div>
<% } %>
<% if(challenge.terminated) { %>
    <div class="al al-danger" style="margin-top: 20px;">
        <%= locale.P_CHALLENGE.ERROR_JOIN_TERMINATED %>
    </div>
<% } else { %>
    <div class="block">
        <h3><%= locale.P_CHALLENGE.JOIN %></h3>
        <form method="post" action="?_csrf=<%= csrfToken %>" enctype="multipart/form-data">
            <div class="form-group">
                <div class="form-photo">
                    <div class="form-photo-select cp">
                        <span><%= locale.MAIN.SELECT_PHOTO %></span>
                        <input type="file" id="chphoto" name="chphoto" class="form-input-photo" accept="image/jpeg,image/png">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="form-button"><%= locale.MAIN.UPLOAD %></button>
            </div>
        </form>
    </div>
<% } %>